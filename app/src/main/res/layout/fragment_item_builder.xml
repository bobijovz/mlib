<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hero_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="120dp"
                android:paddingTop="30dp"
                android:text="Title test"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:id="@+id/imageview_item"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hero_name"
                android:layout_toEndOf="@id/cardview_image_container"
                android:layout_toRightOf="@id/cardview_image_container"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_hero_name"
                    android:text="Role"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialty"
                    android:textStyle="italic"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview_image_container"
                android:text="1000"
                android:drawableLeft="@drawable/shape_red_circle"
                android:drawableStart="@drawable/shape_red_circle"
                android:drawablePadding="5dp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tv_mana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview_image_container"
                android:layout_toRightOf="@id/tv_health"
                android:text="1000"
                android:drawableLeft="@drawable/shape_blue_circle"
                android:drawableStart="@drawable/shape_blue_circle"
                android:drawablePadding="5dp"
                android:padding="2dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>

